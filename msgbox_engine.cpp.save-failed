}

void MsgBoxEngine::setButtonType(const int btnType)
{
    if (_buttonsPtr != 0)
    {
        delete _buttonsPtr;
    }

    switch(btnType)
    {
    case (MsgBoxEngine::YESNO_BUTTON):
        _buttonsPtr = new int [2];
        (*_buttonsPtr)[0] = BTN_YES;
        (*_buttonsPtr)[1] = BTN_NO;
        setBtnCount(2);
        break;

    case (MsgBoxEngine::YESNOCANCEL_BUTTON):
        _buttonsPtr = new int [3];
        (*_buttonsPtr)[0] = MsgBoxEngine::BTN_YES;
        (*_buttonsPtr)[1] = MsgBoxEngine::BTN_NO;
        (*_buttonsPtr)[2] = MsgBoxEngine::BTN_CANCEL;
        setBtnCount(3);
        break;

    case (MsgBoxEngine::OKCANCEL_BUTTON):
        _buttonsPtr = new int [2];
        (*_buttonsPtr)[0] = MsgBoxEngine::BTN_OK;
        (*_buttonsPtr)[1] = MsgBoxEngine::BTN_CANCEL;
        setBtnCount(2);
        break;

    default:
        _buttonsPtr = new int [1];
        (*_buttonsPtr)[0] = MsgBoxEngine::BTN_OK;
        setBtnCount(1);
        break;
    }

    setSelectedButton(-1);
}

