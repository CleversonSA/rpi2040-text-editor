void MsgBoxEngine::setTitle(const char title[])
{
    if (_title != 0)
    {
        delete _title;
    }

    _title = new char[strlen(title)];
    strcpy(_title, title);
}

char * MsgBoxEngine::getTitle() const
{
    return _title;
}

void MsgBoxEngine::setMessage(const char message[])
{
    if (_message != 0)
    {
        delete _message;
    }

    _message = new char[strlen(message)];
    strcpy(_message, message);
}

char * MsgBoxEngine::getMessage() const
{
    return _message;
}


